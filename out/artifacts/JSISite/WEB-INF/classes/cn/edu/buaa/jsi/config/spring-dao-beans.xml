<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DAO数据访问对象 -->
    <bean name="userDao" class="cn.edu.buaa.jsi.hibernate.dao.impl.UserDaoImpl">
        <property name="hibernateTemplate" ref="hibernateTemplate" />
    </bean>
    <bean name="accountDao" class="cn.edu.buaa.jsi.hibernate.dao.impl.AccountDaoImpl">
        <property name="hibernateTemplate" ref="hibernateTemplate" />
    </bean>
    <bean name="groupDao" class="cn.edu.buaa.jsi.hibernate.dao.impl.GroupDaoImpl">
        <property name="hibernateTemplate" ref="hibernateTemplate" />
    </bean>
</beans>