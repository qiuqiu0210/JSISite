<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.edu.buaa.jsi.entities">

    <class name="User" table="tb_user" catalog="jsi_db">
        <id name="userId" column="user_id"/>
        <property name="userName" column="user_name"/>
        <property name="userPsw" column="user_psw"/>
        <property name="userAuth" column="user_auth"/>
    </class>
    <query name="findUserById">
        select u.userName from User as u where u.userId = ?
    </query>
</hibernate-mapping>